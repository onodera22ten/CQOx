# ========================================
# CQOx 環境変数設定
# ========================================

# データベース（TimescaleDB）
TIMESCALE_HOST=timescaledb
TIMESCALE_PORT=5432
TIMESCALE_DB=cqox_db
TIMESCALE_USER=cqox_user
TIMESCALE_PASSWORD=cqox_password_2024_secure

# Docker Compose用データベース変数
DB_NAME=cqox_db
DB_USER=cqox_user
DB_PASSWORD=cqox_password_2024_secure

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024

# バックエンド
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# フロントエンド
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Jaeger（分散トレーシング）
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Loki（ログ集約）
LOKI_PORT=3100

# Vault（シークレット管理）
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=dev-only-token

# WolframONE統合
WOLFRAM_ENABLED=false # true にする場合は Wolfram Engine が必要
WOLFRAM_API_KEY=your_wolfram_api_key_here

# セキュリティ
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_change_this_in_production

# Python環境
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# 環境
ENVIRONMENT=development
